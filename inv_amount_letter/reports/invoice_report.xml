<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="inv_report_invoice_document" inherit_id="account.report_invoice_document">
        <!-- Add amount in letters after the total section -->
        <xpath expr="//div[hasclass('clearfix')]" position="inside">
            <div class="mt-3" t-if="o.amount_letter">
                <p>
                    <strong>Arrêtée la présente facture à la somme de :</strong>
                    <span t-esc="o.amount_letter"/>
                </p>
            </div>
        </xpath>

        <xpath expr="//p[@t-if='o.company_id.display_invoice_amount_total_words']" position="replace">
        </xpath>
    </template>
</odoo>
